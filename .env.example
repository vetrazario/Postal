# ===========================================
# EMAIL SENDER INFRASTRUCTURE
# Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# ===========================================

# ===========================================
# DOMAIN (REQUIRED)
# ===========================================
DOMAIN=linenarrow.com

# ===========================================
# DATABASE PASSWORDS (REQUIRED)
# Generate with: openssl rand -hex 32
# ===========================================
POSTGRES_PASSWORD=CHANGE_ME_postgres_password_here
MARIADB_PASSWORD=CHANGE_ME_mariadb_password_here
RABBITMQ_PASSWORD=CHANGE_ME_rabbitmq_password_here

# ===========================================
# RAILS SECRETS (REQUIRED)
# Generate with: openssl rand -hex 64
# ===========================================
SECRET_KEY_BASE=CHANGE_ME_generate_with_openssl_rand_hex_64

# ===========================================
# ENCRYPTION KEYS (REQUIRED)
# Generate each with: openssl rand -hex 32
# ===========================================
ENCRYPTION_PRIMARY_KEY=CHANGE_ME_generate_with_openssl_rand_hex_32
ENCRYPTION_DETERMINISTIC_KEY=CHANGE_ME_generate_with_openssl_rand_hex_32
ENCRYPTION_KEY_DERIVATION_SALT=CHANGE_ME_generate_with_openssl_rand_hex_32

# ===========================================
# POSTAL CONFIGURATION (REQUIRED)
# ===========================================
# Signing key - generate with: openssl rand -hex 32
POSTAL_SIGNING_KEY=CHANGE_ME_generate_with_openssl_rand_hex_32
# API key from Postal admin panel (after setup)
POSTAL_API_KEY=
POSTAL_API_URL=http://postal:5000

# ===========================================
# DASHBOARD ACCESS (REQUIRED)
# ===========================================
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=CHANGE_ME_strong_password

# ===========================================
# SMTP RELAY AUTHENTICATION
# Generate with: openssl rand -hex 32
# ===========================================
SMTP_RELAY_SECRET=CHANGE_ME_generate_with_openssl_rand_hex_32

# ===========================================
# WEBHOOK SECURITY
# Generate with: openssl rand -hex 32
# ===========================================
WEBHOOK_SECRET=CHANGE_ME_generate_with_openssl_rand_hex_32

# ===========================================
# AMS ENTERPRISE INTEGRATION (Optional)
# ===========================================
AMS_CALLBACK_URL=
AMS_API_KEY=
AMS_API_URL=

# ===========================================
# ALLOWED SENDER DOMAINS
# Comma-separated list of domains allowed to send
# ===========================================
ALLOWED_SENDER_DOMAINS=linenarrow.com

# ===========================================
# SIDEKIQ WEB UI (Optional)
# ===========================================
SIDEKIQ_WEB_USERNAME=admin
SIDEKIQ_WEB_PASSWORD=CHANGE_ME_sidekiq_password

# ===========================================
# OPTIONAL SETTINGS
# ===========================================
RAILS_ENV=production
LOG_LEVEL=info
DAILY_LIMIT=50000
SIDEKIQ_CONCURRENCY=5
CORS_ORIGINS=

# Sentry error tracking (optional)
SENTRY_DSN=
