                            <p class="text-sm text-red-700 bg-red-50 p-3 rounded-md whitespace-pre-wrap"><%= issues.to_s %></p>
                          <% end %>
                        </div>
                      <% end %>

                      <!-- Patterns -->
                      <% if result['patterns'].present? && result['patterns'].any? %>
                        <div class="mb-4">
                          <h5 class="text-sm font-semibold text-gray-900 mb-2">Identified Patterns</h5>
                          <ul class="list-disc list-inside text-sm text-gray-700 space-y-1 bg-gray-50 p-3 rounded-md">
                            <% result['patterns'].each do |pattern| %>
                              <li><%= pattern.is_a?(Hash) ? (pattern['description'] || pattern['text'] || pattern.to_s) : pattern.to_s %></li>
                            <% end %>
                          </ul>
                        </div>
                      <% end %>

                      <!-- Red Flags -->
                      <% if result['red_flags'].present? && result['red_flags'].any? %>
                        <div class="mb-4">
                          <h5 class="text-sm font-semibold text-gray-900 mb-2">Red Flags</h5>
                          <ul class="list-disc list-inside text-sm text-red-700 space-y-1 bg-red-50 p-3 rounded-md">
                            <% result['red_flags'].each do |flag| %>
                              <li><%= flag.is_a?(Hash) ? (flag['description'] || flag['text'] || flag.to_s) : flag.to_s %></li>
                            <% end %>
                          </ul>
                        </div>
                      <% end %>

                      <!-- Best/Worst Hours -->
                      <% if result['best_hours'].present? || result['best_send_times'].present? %>
                        <% 
                          best_hours = result['best_hours'] || result['best_send_times']
                          if best_hours.is_a?(String)
                            best_hours = best_hours.split(',').map(&:strip)
                          end
                        %>
                        <div class="mb-4 grid grid-cols-2 gap-4">
                          <div>
                            <h5 class="text-sm font-semibold text-gray-900 mb-2">–õ—É—á—à–µ–µ –≤—Ä–µ–º—è –æ—Ç–ø—Ä–∞–≤–∫–∏</h5>
                            <div class="bg-green-50 p-3 rounded-md">
                              <% Array(best_hours).each do |hour| %>
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-200 text-green-800 mr-1 mb-1">
                                  <%= hour.is_a?(Hash) ? "#{hour['hour']}:00" : hour.to_s %>
                                </span>
                              <% end %>
                            </div>
                          </div>
                          <% if result['worst_hours'].present? %>
                            <% 
                              worst_hours = result['worst_hours']
                              if worst_hours.is_a?(String)
                                worst_hours = worst_hours.split(',').map(&:strip)
                              end
                            %>
                            <div>
                              <h5 class="text-sm font-semibold text-gray-900 mb-2">–•—É–¥—à–µ–µ –≤—Ä–µ–º—è –æ—Ç–ø—Ä–∞–≤–∫–∏</h5>
                              <div class="bg-red-50 p-3 rounded-md">
                                <% Array(worst_hours).each do |hour| %>
                                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-200 text-red-800 mr-1 mb-1">
                                    <%= hour.is_a?(Hash) ? "#{hour['hour']}:00" : hour.to_s %>
                                  </span>
                                <% end %>
                              </div>
                            </div>
                          <% end %>
                        </div>
                      <% end %>

                      <!-- Best/Worst Campaign -->
                      <% if result['best_campaign'].present? || result['worst_campaign'].present? %>
                        <div class="mb-4 grid grid-cols-2 gap-4">
                          <% if result['best_campaign'].present? %>
                            <div class="bg-green-50 p-3 rounded-md">
                              <h5 class="text-sm font-semibold text-green-800 mb-1">Best Performing</h5>
                              <p class="text-sm text-green-700">
                                <%= result['best_campaign'].is_a?(Hash) ? result['best_campaign']['id'] || result['best_campaign']['campaign_id'] : result['best_campaign'] %>
                              </p>
                            </div>
                          <% end %>
                          <% if result['worst_campaign'].present? %>
                            <div class="bg-red-50 p-3 rounded-md">
                              <h5 class="text-sm font-semibold text-red-800 mb-1">Needs Improvement</h5>
                              <p class="text-sm text-red-700">
                                <%= result['worst_campaign'].is_a?(Hash) ? result['worst_campaign']['id'] || result['worst_campaign']['campaign_id'] : result['worst_campaign'] %>
                              </p>
                            </div>
                          <% end %>
                        </div>
                      <% end %>

                      <!-- Success Factors -->
                      <% if result['success_factors'].present? && result['success_factors'].any? %>
                        <div class="mb-4">
                          <h5 class="text-sm font-semibold text-gray-900 mb-2">Success Factors</h5>
                          <ul class="list-disc list-inside text-sm text-gray-700 space-y-1 bg-green-50 p-3 rounded-md">
                            <% result['success_factors'].each do |factor| %>
                              <li><%= factor.is_a?(Hash) ? (factor['description'] || factor['text'] || factor.to_s) : factor.to_s %></li>
                            <% end %>
                          </ul>
                        </div>
                      <% end %>

                      <!-- Recommendations -->
                      <% if result['recommendations'].present? && result['recommendations'].any? %>
                        <div class="mb-4">
                          <h5 class="text-sm font-semibold text-gray-900 mb-2">Recommendations</h5>
                          <ul class="list-decimal list-inside text-sm text-gray-700 space-y-2 bg-indigo-50 p-3 rounded-md">
                            <% result['recommendations'].each do |rec| %>
                              <li><%= rec.is_a?(Hash) ? (rec['description'] || rec['text'] || rec.to_s) : rec.to_s %></li>
                            <% end %>
                          </ul>
                        </div>
                      <% end %>

                      <!-- Next Steps -->
                      <% if result['next_steps'].present? && result['next_steps'].any? %>
                        <div class="mb-4">
                          <h5 class="text-sm font-semibold text-gray-900 mb-2">Next Steps</h5>
                          <ol class="list-decimal list-inside text-sm text-gray-700 space-y-1 bg-yellow-50 p-3 rounded-md">
                            <% result['next_steps'].each do |step| %>
                              <li><%= step.is_a?(Hash) ? (step['description'] || step['text'] || step.to_s) : step.to_s %></li>
                            <% end %>
                          </ol>
                        </div>
                      <% end %>

                    <% elsif analysis.status == 'processing' %>
                      <div class="flex items-center justify-center py-8">
                        <svg class="animate-spin h-8 w-8 text-indigo-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                        <span class="ml-3 text-sm text-gray-600">Analysis in progress... Please refresh in a moment.</span>
                      </div>

                    <% elsif analysis.status == 'failed' %>
                      <div class="bg-red-50 p-4 rounded-md">
                        <p class="text-sm text-red-700">
                          <strong>Error:</strong> <%= analysis.analysis_result.is_a?(Hash) && analysis.analysis_result['error'] ? analysis.analysis_result['error'] : 'Analysis failed. Please try again.' %>
                        </p>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="rounded-lg bg-gray-50 p-12 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
        </svg>
        <h3 class="mt-2 text-sm font-semibold text-gray-900">AI Analytics Not Configured</h3>
        <p class="mt-1 text-sm text-gray-500">Enable AI analytics in settings to start analyzing your email performance</p>
        <div class="mt-6">
          <%= link_to dashboard_settings_path, class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" do %>
            Configure AI Settings
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
function analyticsPage() {
  return {
    activeTab: 'dashboard',
    expandedAnalysis: null,
    chartType: 'daily',
    init() {
      this.loadDailyChart();
      // Watch for chart type changes
      this.$watch('chartType', (value) => {
        if (this.activeTab === 'dashboard') {
          if (value === 'daily' || value === 'timeline') {
            this.loadDailyChart();
          } else if (value === 'hourly') {
            this.loadHourlyChart();
          } else if (value === 'comparison') {
            this.loadCampaignsChart();
          }
        }
      });
    },
    async loadDailyChart() {
      try {
        const response = await fetch('<%= daily_dashboard_analytics_path %>', {
          credentials: 'include'
        });
        const data = await response.json();
        
        const ctx = document.getElementById('mainChart');
        if (!ctx) return;
        
        const chartContext = ctx.getContext('2d');
        if (window.mainChartInstance) {
          window.mainChartInstance.destroy();
        }
        
        window.mainChartInstance = new Chart(chartContext, {
        type: 'line',
        data: {
          labels: data.map(d => d.label),
          datasets: [{
            label: 'Sent',
            data: data.map(d => d.sent),
            borderColor: 'rgb(99, 102, 241)',
            backgroundColor: 'rgba(99, 102, 241, 0.1)',
          }, {
            label: 'Delivered',
            data: data.map(d => d.delivered),
            borderColor: 'rgb(34, 197, 94)',
            backgroundColor: 'rgba(34, 197, 94, 0.1)',
          }, {
            label: 'Opened',
            data: data.map(d => d.opened),
            borderColor: 'rgb(59, 130, 246)',
            backgroundColor: 'rgba(59, 130, 246, 0.1)',
          }, {
            label: 'Clicked',
            data: data.map(d => d.clicked),
            borderColor: 'rgb(168, 85, 247)',
            backgroundColor: 'rgba(168, 85, 247, 0.1)',
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: true,
          scales: {
            y: {
              beginAtZero: true
            }
          }
        }
      });
      } catch (e) {
        console.error('Analytics chart load error:', e);
      }
    },
    async loadHourlyChart() {
      try {
        const date = new Date().toISOString().split('T')[0];
        const response = await fetch(`<%= hourly_dashboard_analytics_path %>?date=${date}`, {
          credentials: 'include'
        });
        const data = await response.json();
        
        const ctx = document.getElementById('mainChart');
        if (!ctx) return;
        
        const chartContext = ctx.getContext('2d');
        if (window.mainChartInstance) {
          window.mainChartInstance.destroy();
        }
        
        window.mainChartInstance = new Chart(chartContext, {
        type: 'line',
        data: {
          labels: data.map(d => d.label),
          datasets: [{
            label: 'Sent',
            data: data.map(d => d.sent),
            borderColor: 'rgb(99, 102, 241)',
            backgroundColor: 'rgba(99, 102, 241, 0.1)',
          }, {
            label: 'Delivered',
            data: data.map(d => d.delivered),
            borderColor: 'rgb(34, 197, 94)',
            backgroundColor: 'rgba(34, 197, 94, 0.1)',
          }, {
            label: 'Opened',
            data: data.map(d => d.opened),
            borderColor: 'rgb(59, 130, 246)',
            backgroundColor: 'rgba(59, 130, 246, 0.1)',
          }, {
            label: 'Clicked',
            data: data.map(d => d.clicked),
            borderColor: 'rgb(168, 85, 247)',
            backgroundColor: 'rgba(168, 85, 247, 0.1)',
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: true,
          scales: {
            y: {
              beginAtZero: true
            }
          }
        }
      });
      } catch (e) {
        console.error('Analytics chart load error:', e);
      }
    },
    async loadCampaignsChart() {
      try {
        const response = await fetch('<%= campaigns_dashboard_analytics_path %>', {
          credentials: 'include'
        });
        const data = await response.json();
        
        const ctx = document.getElementById('mainChart');
        if (!ctx) return;
        
        const chartContext = ctx.getContext('2d');
        if (window.mainChartInstance) {
          window.mainChartInstance.destroy();
        }
        
        window.mainChartInstance = new Chart(chartContext, {
        type: 'bar',
        data: {
          labels: data.map(d => d.campaign_id || 'Unknown'),
          datasets: [{
            label: 'Open Rate %',
            data: data.map(d => d.open_rate),
            borderColor: 'rgb(59, 130, 246)',
            backgroundColor: 'rgba(59, 130, 246, 0.5)',
          }, {
            label: 'Click Rate %',
            data: data.map(d => d.click_rate),
            borderColor: 'rgb(168, 85, 247)',
            backgroundColor: 'rgba(168, 85, 247, 0.5)',
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: true,
          scales: {
            y: {
              beginAtZero: true,
              max: 100
            }
          }
        }
      });
      } catch (e) {
        console.error('Analytics chart load error:', e);
      }
    }
  }
}
</script>
