      <canvas id="mainChart" width="400" height="100"></canvas>
    </div>

    <!-- Top Campaigns (if no campaign selected) -->
    <% unless @selected_campaign %>
      <div class="rounded-lg bg-white shadow">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900">Top Campaigns</h3>
          <div class="mt-4">
            <table class="min-w-full divide-y divide-gray-300">
              <thead>
                <tr>
                  <th class="py-3 text-left text-sm font-semibold text-gray-900">Campaign ID</th>
                  <th class="px-3 py-3 text-left text-sm font-semibold text-gray-900">Emails Sent</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <% if @campaign_stats && @campaign_stats.is_a?(Array) %>
                  <% @campaign_stats.each do |stat| %>
                    <tr>
                      <td class="whitespace-nowrap py-4 text-sm font-medium text-gray-900"><%= stat[:campaign_id] %></td>
                      <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= number_with_delimiter(stat[:count]) %></td>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Tab Content: AI Tools -->
  <div x-show="activeTab === 'ai-tools'" x-transition>
    <!-- AI Settings Status -->
    <div class="rounded-lg <%= @ai_settings.enabled? ? 'bg-green-50' : 'bg-yellow-50' %> p-4 mb-6">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="text-sm font-medium <%= @ai_settings.enabled? ? 'text-green-800' : 'text-yellow-800' %>">
            AI Analytics <%= @ai_settings.enabled? ? 'Enabled' : 'Disabled' %>
          </h3>
          <p class="mt-1 text-sm <%= @ai_settings.enabled? ? 'text-green-700' : 'text-yellow-700' %>">
            <% if @ai_settings.enabled? %>
              Model: <%= @ai_settings.ai_model %> | Total Cost: $<%= @total_cost %>
            <% else %>
              Configure AI settings to enable analytics features
            <% end %>
          </p>
        </div>
        <%= link_to "Settings", dashboard_settings_path, class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm hover:bg-gray-50" %>
      </div>
    </div>

    <% if @ai_settings.enabled? %>
      <!-- AI Analysis Actions -->
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-3 mb-6">
        <div class="rounded-lg bg-white p-6 shadow flex flex-col">
          <h3 class="text-lg font-medium text-gray-900">üîç –ê–Ω–∞–ª–∏–∑ –æ—Ç–∫–∞–∑–æ–≤</h3>
          <p class="mt-2 text-sm text-gray-500">AI-–∞–Ω–∞–ª–∏–∑ –ø—Ä–∏—á–∏–Ω –±–∞—É–Ω—Å–æ–≤ –∏ —Ä–µ–∫–æ–º–µ–Ω–¥–∞—Ü–∏–∏</p>
          <%= form_tag analyze_bounces_dashboard_analytics_path, method: :post, class: "mt-4 mt-auto" do %>
            <button type="submit" class="w-full rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500">–ó–∞–ø—É—Å—Ç–∏—Ç—å –∞–Ω–∞–ª–∏–∑</button>
          <% end %>
        </div>

        <div class="rounded-lg bg-white p-6 shadow flex flex-col">
          <h3 class="text-lg font-medium text-gray-900">‚è±Ô∏è –û–ø—Ç–∏–º–∏–∑–∞—Ü–∏—è –≤—Ä–µ–º–µ–Ω–∏</h3>
          <p class="mt-2 text-sm text-gray-500">–õ—É—á—à–µ–µ –≤—Ä–µ–º—è –¥–ª—è –º–∞–∫—Å–∏–º–∞–ª—å–Ω–æ–π –≤–æ–≤–ª–µ—á–µ–Ω–Ω–æ—Å—Ç–∏</p>
          <%= form_tag optimize_timing_dashboard_analytics_path, method: :post, class: "mt-4 mt-auto" do %>
            <input type="text" name="campaign_id" value="<%= @selected_campaign %>" placeholder="Campaign ID" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm mb-2" required>
            <button type="submit" class="w-full rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500">–û–ø—Ç–∏–º–∏–∑–∏—Ä–æ–≤–∞—Ç—å</button>
          <% end %>
        </div>

        <div class="rounded-lg bg-white p-6 shadow flex flex-col">
          <h3 class="text-lg font-medium text-gray-900">üîç –°—Ä–∞–≤–Ω–µ–Ω–∏–µ –∫–∞–º–ø–∞–Ω–∏–π</h3>
          <p class="mt-2 text-sm text-gray-500">–°—Ä–∞–≤–Ω–∏—Ç—å —ç—Ñ—Ñ–µ–∫—Ç–∏–≤–Ω–æ—Å—Ç—å –Ω–µ—Å–∫–æ–ª—å–∫–∏—Ö –∫–∞–º–ø–∞–Ω–∏–π</p>
          <%= form_tag compare_campaigns_dashboard_analytics_path, method: :post, class: "mt-4 mt-auto" do %>
            <input type="text" name="campaign_ids[]" placeholder="Campaign ID 1" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm mb-2" required>
            <input type="text" name="campaign_ids[]" placeholder="Campaign ID 2" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm mb-2" required>
            <button type="submit" class="w-full rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500">–°—Ä–∞–≤–Ω–∏—Ç—å</button>
          <% end %>
        </div>
      </div>

      <!-- AI Analysis for Selected Campaign -->
      <% if @selected_campaign && @campaign_stats %>
        <div class="rounded-lg bg-white p-6 shadow mb-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">AI –ê–Ω–∞–ª–∏–∑ –∫–∞–º–ø–∞–Ω–∏–∏: <%= @selected_campaign %></h3>
          <%= form_tag analyze_campaign_dashboard_analytics_path, method: :post, class: "inline" do %>
            <%= hidden_field_tag :campaign_id, @selected_campaign %>
            <button type="submit" class="rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500">
              ü§ñ AI –ê–Ω–∞–ª–∏–∑ –∫–∞–º–ø–∞–Ω–∏–∏
            </button>
          <% end %>

          <% if @campaign_stats[:bounced] > 0 %>
            <%= form_tag analyze_bounces_dashboard_analytics_path, method: :post, class: "inline ml-2" do %>
              <%= hidden_field_tag :campaign_id, @selected_campaign %>
              <button type="submit" class="rounded-md bg-red-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500">
                üîç –ê–Ω–∞–ª–∏–∑ –æ—Ç–∫–∞–∑–æ–≤
              </button>
            <% end %>
          <% end %>
        </div>
      <% end %>

      <!-- Recent Analyses -->
      <div class="rounded-lg bg-white shadow">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900">üìú –ò—Å—Ç–æ—Ä–∏—è –∞–Ω–∞–ª–∏–∑–æ–≤</h3>
          <div class="mt-4 space-y-4">
            <% if @recent_analyses.empty? %>
              <p class="py-4 text-center text-sm text-gray-500">No analyses yet. Run your first analysis above.</p>
            <% else %>
              <% @recent_analyses.each do |analysis| %>
                <div class="border border-gray-200 rounded-lg overflow-hidden">
                  <!-- Analysis Header -->
                  <div class="bg-gray-50 px-4 py-3 flex items-center justify-between cursor-pointer hover:bg-gray-100"
                       @click="expandedAnalysis = expandedAnalysis === <%= analysis.id %> ? null : <%= analysis.id %>">
                    <div class="flex items-center space-x-3">
                      <!-- Status Badge -->
                      <% case analysis.status %>
                      <% when 'completed' %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                          Completed
                        </span>
                      <% when 'processing' %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                          <svg class="animate-spin -ml-1 mr-1.5 h-3 w-3 text-yellow-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                          </svg>
                          Processing
                        </span>
                      <% when 'failed' %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                          Failed
                        </span>
                      <% end %>

                      <div>
                        <h4 class="text-sm font-medium text-gray-900"><%= analysis.type_display_name %></h4>
                        <p class="text-xs text-gray-500">
                          <%= analysis.created_at.strftime('%b %d, %Y at %H:%M') %>
                          <% if analysis.total_tokens.to_i > 0 %>
                            | <%= analysis.total_tokens %> tokens
                            | $<%= analysis.estimated_cost %>
                          <% end %>
                        </p>
                      </div>
                    </div>

                    <svg class="h-5 w-5 text-gray-400 transition-transform"
                         :class="{ 'rotate-180': expandedAnalysis === <%= analysis.id %> }"
                         xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  </div>

                  <!-- Analysis Content (Expandable) -->
                  <div x-show="expandedAnalysis === <%= analysis.id %>"
                       x-transition:enter="transition ease-out duration-200"
                       x-transition:enter-start="opacity-0"
                       x-transition:enter-end="opacity-100"
                       class="px-4 py-4 border-t border-gray-200">

                    <% if analysis.status == 'completed' && analysis.analysis_result.present? %>
                      <% 
                        # Parse result if it's a string (JSON)
                        raw_result = analysis.analysis_result
                        result = if raw_result.is_a?(String)
                          begin
                            parsed = JSON.parse(raw_result)
                            # Handle case when AI returns wrapped JSON like {"json": {...}}
                            if parsed.is_a?(Hash) && parsed.keys.length == 1 && parsed['json']
                              parsed['json']
                            elsif parsed.is_a?(Hash) && parsed.keys.length == 1 && parsed[:json]
                              parsed[:json]
                            else
                              parsed
                            end
                          rescue JSON::ParserError
                            { 'error' => 'Invalid JSON format', 'raw' => raw_result }
                          end
                        else
                          raw_result.is_a?(Hash) ? raw_result.with_indifferent_access : {}
                        end
                        
                        # –ï—Å–ª–∏ result - —ç—Ç–æ –≤—Å–µ –µ—â–µ —Å—Ç—Ä–æ–∫–∞ (JSON), –ø–æ–ø—Ä–æ–±—É–µ–º –µ—â–µ —Ä–∞–∑
                        if result.is_a?(String) && result.strip.start_with?('{')
                          begin
                            result = JSON.parse(result)
                            result = result.with_indifferent_access if result.is_a?(Hash)
                          rescue
                          end
                        end
                        
                        # –ï—Å–ª–∏ summary —Å–æ–¥–µ—Ä–∂–∏—Ç Hash –∏–ª–∏ Array –≤–º–µ—Å—Ç–æ —Å—Ç—Ä–æ–∫–∏ - —ç—Ç–æ –æ—à–∏–±–∫–∞ –ø–∞—Ä—Å–∏–Ω–≥–∞
                        if result.is_a?(Hash) && result['summary'].present? && !result['summary'].is_a?(String)
                          summary_obj = result['summary']
                          if summary_obj.is_a?(Hash) && summary_obj['summary']
                            result['summary'] = summary_obj['summary']
                          elsif summary_obj.is_a?(Hash)
                            result = summary_obj
                          end
                        end
                      %>

                      <!-- Effectiveness Score (for campaign analysis) -->
                      <% if result['effectiveness_score'].present? %>
                        <div class="mb-4">
                          <h5 class="text-sm font-semibold text-gray-900 mb-2">–û—Ü–µ–Ω–∫–∞ —ç—Ñ—Ñ–µ–∫—Ç–∏–≤–Ω–æ—Å—Ç–∏</h5>
                          <% score = result['effectiveness_score'].to_i %>
                          <% score_class = score >= 7 ? 'text-green-600' : score >= 4 ? 'text-yellow-600' : 'text-red-600' %>
                          <% score_bg = score >= 7 ? 'bg-green-50' : score >= 4 ? 'bg-yellow-50' : 'bg-red-50' %>
                          <div class="<%= score_bg %> p-4 rounded-md">
                            <div class="flex items-center gap-4">
                              <span class="text-4xl font-bold <%= score_class %>"><%= score %></span>
                              <span class="text-sm text-gray-600">–∏–∑ 10</span>
                            </div>
                          </div>
                        </div>
                      <% end %>

                      <!-- Summary -->
                      <% if result.is_a?(Hash) && result['summary'].present? %>
                        <% 
                          summary_text = result['summary']
