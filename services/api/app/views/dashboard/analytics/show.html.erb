    </nav>
  </div>

  <!-- Tab Content: Dashboard -->
  <div x-show="activeTab === 'dashboard'" x-transition>
    <!-- Overview Stats (if no campaign selected) -->
    <% unless @selected_campaign %>
      <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3 mb-8">
        <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
          <dt class="truncate text-sm font-medium text-gray-500">Total Sent</dt>
          <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900"><%= number_with_delimiter(@overview_stats[:total_sent]) %></dd>
        </div>
        <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
          <dt class="truncate text-sm font-medium text-gray-500">Delivery Rate</dt>
          <dd class="mt-1 text-3xl font-semibold tracking-tight text-green-600">
            <% if @overview_stats[:total_sent] > 0 %>
              <%= ((@overview_stats[:total_delivered].to_f / @overview_stats[:total_sent]) * 100).round(1) %>%
            <% else %>
