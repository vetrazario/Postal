<div class="space-y-8" x-data="{ expandedAnalysis: null }">
  <div>
    <h1 class="text-3xl font-bold text-gray-900">AI Analytics</h1>
    <p class="mt-2 text-sm text-gray-700">AI-powered insights for email performance optimization</p>
  </div>

  <!-- Flash Messages -->
  <% if flash[:success] %>
    <div class="rounded-md bg-green-50 p-4">
      <div class="flex">
        <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        <div class="ml-3">
          <p class="text-sm font-medium text-green-800"><%= flash[:success] %></p>
        </div>
      </div>
    </div>
  <% end %>

  <% if flash[:error] %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
        </svg>
        <div class="ml-3">
          <p class="text-sm font-medium text-red-800"><%= flash[:error] %></p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- AI Settings Status -->
  <div class="rounded-lg <%= @ai_settings.enabled? ? 'bg-green-50' : 'bg-yellow-50' %> p-4">
    <div class="flex items-center justify-between">
      <div>
        <h3 class="text-sm font-medium <%= @ai_settings.enabled? ? 'text-green-800' : 'text-yellow-800' %>">
          AI Analytics <%= @ai_settings.enabled? ? 'Enabled' : 'Disabled' %>
        </h3>
        <p class="mt-1 text-sm <%= @ai_settings.enabled? ? 'text-green-700' : 'text-yellow-700' %>">
          <% if @ai_settings.enabled? %>
            Model: <%= @ai_settings.ai_model %> | Total Cost: $<%= @total_cost %>
          <% else %>
            Configure AI settings to enable analytics features
          <% end %>
        </p>
      </div>
      <%= link_to "Settings", dashboard_settings_path, class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm hover:bg-gray-50" %>
    </div>
  </div>

  <% if @ai_settings.enabled? %>
    <!-- AI Analysis Actions -->
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-3">
      <div class="rounded-lg bg-white p-6 shadow">
        <h3 class="text-lg font-medium text-gray-900">Analyze Bounces</h3>
        <p class="mt-2 text-sm text-gray-500">Get AI insights on why emails are bouncing and how to reduce bounce rates</p>
        <%= button_to "Run Analysis", analyze_bounces_dashboard_ai_analytics_path, method: :post, class: "mt-4 w-full rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" %>
      </div>

      <div class="rounded-lg bg-white p-6 shadow">
        <h3 class="text-lg font-medium text-gray-900">Optimize Send Time</h3>
        <p class="mt-2 text-sm text-gray-500">Discover the best times to send emails for maximum engagement</p>
        <form action="<%= optimize_timing_dashboard_ai_analytics_path %>" method="post" class="mt-4">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <input type="text" name="campaign_id" placeholder="Campaign ID" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm mb-2" required>
          <button type="submit" class="w-full rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500">Run Analysis</button>
        </form>
      </div>

      <div class="rounded-lg bg-white p-6 shadow">
        <h3 class="text-lg font-medium text-gray-900">Compare Campaigns</h3>
        <p class="mt-2 text-sm text-gray-500">Compare multiple campaigns to identify success factors</p>
        <form action="<%= compare_campaigns_dashboard_ai_analytics_path %>" method="post" class="mt-4">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <input type="text" name="campaign_ids[]" placeholder="Campaign ID 1" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm mb-2" required>
          <input type="text" name="campaign_ids[]" placeholder="Campaign ID 2" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm mb-2" required>
          <button type="submit" class="w-full rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500">Run Analysis</button>
        </form>
      </div>
    </div>

    <!-- Recent Analyses -->
    <div class="rounded-lg bg-white shadow">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg font-medium text-gray-900">Recent Analyses</h3>
        <div class="mt-4 space-y-4">
          <% if @recent_analyses.empty? %>
            <p class="py-4 text-center text-sm text-gray-500">No analyses yet. Run your first analysis above.</p>
          <% else %>
            <% @recent_analyses.each do |analysis| %>
              <div class="border border-gray-200 rounded-lg overflow-hidden">
                <!-- Analysis Header -->
                <div class="bg-gray-50 px-4 py-3 flex items-center justify-between cursor-pointer hover:bg-gray-100"
                     @click="expandedAnalysis = expandedAnalysis === <%= analysis.id %> ? null : <%= analysis.id %>">
                  <div class="flex items-center space-x-3">
                    <!-- Status Badge -->
                    <% case analysis.status %>
                    <% when 'completed' %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        Completed
                      </span>
                    <% when 'processing' %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                        <svg class="animate-spin -ml-1 mr-1.5 h-3 w-3 text-yellow-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                        Processing
                      </span>
                    <% when 'failed' %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        Failed
                      </span>
                    <% end %>

                    <div>
                      <h4 class="text-sm font-medium text-gray-900"><%= analysis.type_display_name %></h4>
                      <p class="text-xs text-gray-500">
                        <%= analysis.created_at.strftime('%b %d, %Y at %H:%M') %>
                        <% if analysis.total_tokens.to_i > 0 %>
                          | <%= analysis.total_tokens %> tokens
                          | $<%= analysis.estimated_cost %>
                        <% end %>
                      </p>
                    </div>
                  </div>

                  <svg class="h-5 w-5 text-gray-400 transition-transform"
                       :class="{ 'rotate-180': expandedAnalysis === <%= analysis.id %> }"
                       xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </div>

                <!-- Analysis Content (Expandable) -->
                <div x-show="expandedAnalysis === <%= analysis.id %>"
                     x-transition:enter="transition ease-out duration-200"
                     x-transition:enter-start="opacity-0"
                     x-transition:enter-end="opacity-100"
                     class="px-4 py-4 border-t border-gray-200">

                  <% if analysis.status == 'completed' && analysis.analysis_result.present? %>
                    <% result = analysis.analysis_result %>

                    <!-- Summary -->
                    <% if result['summary'].present? %>
                      <div class="mb-4">
                        <h5 class="text-sm font-semibold text-gray-900 mb-2">Summary</h5>
                        <p class="text-sm text-gray-700 bg-blue-50 p-3 rounded-md"><%= result['summary'] %></p>
                      </div>
                    <% end %>

                    <!-- Patterns (for bounce analysis) -->
                    <% if result['patterns'].present? && result['patterns'].any? %>
                      <div class="mb-4">
                        <h5 class="text-sm font-semibold text-gray-900 mb-2">Identified Patterns</h5>
                        <ul class="list-disc list-inside text-sm text-gray-700 space-y-1 bg-gray-50 p-3 rounded-md">
                          <% result['patterns'].each do |pattern| %>
                            <li><%= pattern.is_a?(Hash) ? pattern['description'] || pattern.to_json : pattern %></li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>

                    <!-- Red Flags (for bounce analysis) -->
                    <% if result['red_flags'].present? && result['red_flags'].any? %>
                      <div class="mb-4">
                        <h5 class="text-sm font-semibold text-gray-900 mb-2">Red Flags</h5>
                        <ul class="list-disc list-inside text-sm text-red-700 space-y-1 bg-red-50 p-3 rounded-md">
                          <% result['red_flags'].each do |flag| %>
                            <li><%= flag.is_a?(Hash) ? flag['description'] || flag.to_json : flag %></li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>

                    <!-- Best/Worst Hours (for time optimization) -->
                    <% if result['best_hours'].present? %>
                      <div class="mb-4 grid grid-cols-2 gap-4">
                        <div>
                          <h5 class="text-sm font-semibold text-gray-900 mb-2">Best Hours to Send</h5>
                          <div class="bg-green-50 p-3 rounded-md">
                            <% Array(result['best_hours']).each do |hour| %>
                              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-200 text-green-800 mr-1 mb-1">
                                <%= hour.is_a?(Hash) ? "#{hour['hour']}:00" : "#{hour}:00" %>
                              </span>
                            <% end %>
                          </div>
                        </div>
                        <% if result['worst_hours'].present? %>
                          <div>
                            <h5 class="text-sm font-semibold text-gray-900 mb-2">Worst Hours to Send</h5>
                            <div class="bg-red-50 p-3 rounded-md">
                              <% Array(result['worst_hours']).each do |hour| %>
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-200 text-red-800 mr-1 mb-1">
                                  <%= hour.is_a?(Hash) ? "#{hour['hour']}:00" : "#{hour}:00" %>
                                </span>
                              <% end %>
                            </div>
                          </div>
                        <% end %>
                      </div>
                    <% end %>

                    <!-- Best/Worst Campaign (for comparison) -->
                    <% if result['best_campaign'].present? || result['worst_campaign'].present? %>
                      <div class="mb-4 grid grid-cols-2 gap-4">
                        <% if result['best_campaign'].present? %>
                          <div class="bg-green-50 p-3 rounded-md">
                            <h5 class="text-sm font-semibold text-green-800 mb-1">Best Performing</h5>
                            <p class="text-sm text-green-700">
                              <%= result['best_campaign'].is_a?(Hash) ? result['best_campaign']['id'] || result['best_campaign']['campaign_id'] : result['best_campaign'] %>
                            </p>
                          </div>
                        <% end %>
                        <% if result['worst_campaign'].present? %>
                          <div class="bg-red-50 p-3 rounded-md">
                            <h5 class="text-sm font-semibold text-red-800 mb-1">Needs Improvement</h5>
                            <p class="text-sm text-red-700">
                              <%= result['worst_campaign'].is_a?(Hash) ? result['worst_campaign']['id'] || result['worst_campaign']['campaign_id'] : result['worst_campaign'] %>
                            </p>
                          </div>
                        <% end %>
                      </div>
                    <% end %>

                    <!-- Success Factors (for comparison) -->
                    <% if result['success_factors'].present? && result['success_factors'].any? %>
                      <div class="mb-4">
                        <h5 class="text-sm font-semibold text-gray-900 mb-2">Success Factors</h5>
                        <ul class="list-disc list-inside text-sm text-gray-700 space-y-1 bg-green-50 p-3 rounded-md">
                          <% result['success_factors'].each do |factor| %>
                            <li><%= factor.is_a?(Hash) ? factor['description'] || factor.to_json : factor %></li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>

                    <!-- Recommendations -->
                    <% if result['recommendations'].present? && result['recommendations'].any? %>
                      <div class="mb-4">
                        <h5 class="text-sm font-semibold text-gray-900 mb-2">Recommendations</h5>
                        <ul class="list-decimal list-inside text-sm text-gray-700 space-y-2 bg-indigo-50 p-3 rounded-md">
                          <% result['recommendations'].each do |rec| %>
                            <li><%= rec.is_a?(Hash) ? rec['description'] || rec['text'] || rec.to_json : rec %></li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>

                    <!-- Next Steps (for bounce analysis) -->
                    <% if result['next_steps'].present? && result['next_steps'].any? %>
                      <div class="mb-4">
                        <h5 class="text-sm font-semibold text-gray-900 mb-2">Next Steps</h5>
                        <ol class="list-decimal list-inside text-sm text-gray-700 space-y-1 bg-yellow-50 p-3 rounded-md">
                          <% result['next_steps'].each do |step| %>
                            <li><%= step.is_a?(Hash) ? step['description'] || step.to_json : step %></li>
                          <% end %>
                        </ol>
                      </div>
                    <% end %>

                  <% elsif analysis.status == 'processing' %>
                    <div class="flex items-center justify-center py-8">
                      <svg class="animate-spin h-8 w-8 text-indigo-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                      </svg>
                      <span class="ml-3 text-sm text-gray-600">Analysis in progress... Please refresh in a moment.</span>
                    </div>

                  <% elsif analysis.status == 'failed' %>
                    <div class="bg-red-50 p-4 rounded-md">
                      <p class="text-sm text-red-700">
                        <strong>Error:</strong> <%= analysis.analysis_result['error'] || 'Analysis failed. Please try again.' %>
                      </p>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="rounded-lg bg-gray-50 p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
      </svg>
      <h3 class="mt-2 text-sm font-semibold text-gray-900">AI Analytics Not Configured</h3>
      <p class="mt-1 text-sm text-gray-500">Enable AI analytics in settings to start analyzing your email performance</p>
      <div class="mt-6">
        <%= link_to dashboard_settings_path, class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" do %>
          Configure AI Settings
        <% end %>
      </div>
    </div>
  <% end %>
</div>
