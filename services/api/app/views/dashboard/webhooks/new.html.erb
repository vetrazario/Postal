<div class="space-y-10">
  <div>
    <h1 class="text-3xl font-bold text-gray-900">Add Webhook Endpoint</h1>
    <p class="mt-2 text-sm text-gray-700">Configure a new webhook endpoint</p>
  </div>

  <div class="mx-auto max-w-2xl">
    <%= form_with model: @webhook, url: dashboard_webhooks_path, method: :post, class: "space-y-6" do |form| %>
      <div class="rounded-md bg-white shadow-sm ring-1 ring-gray-900/5 px-4 py-6 sm:p-8">
        <div class="space-y-6">
          <div>
            <%= form.label :url, "Webhook URL", class: "block text-sm font-medium text-gray-900" %>
            <%= form.url_field :url, placeholder: "https://ams.example.com/webhooks", class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm" %>
          </div>
          <div>
            <%= form.label :secret_key, "Secret Key (optional)", class: "block text-sm font-medium text-gray-900" %>
            <%= form.text_field :secret_key, placeholder: "For HMAC signature verification", class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm" %>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-900">Events to Subscribe</label>
            <div class="mt-2 space-y-2">
              <% ['delivered', 'opened', 'clicked', 'bounced', 'failed', 'complained'].each do |event| %>
                <div class="flex items-center">
                  <%= check_box_tag 'webhook_endpoint[events][]', event, true, class: "h-4 w-4 rounded border-gray-300 text-indigo-600" %>
                  <label class="ml-3 text-sm text-gray-700"><%= event.capitalize %></label>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="flex items-center justify-end gap-x-6">
        <%= link_to "Cancel", dashboard_webhooks_path, class: "text-sm font-semibold text-gray-900" %>
        <%= form.submit "Create Webhook", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>
