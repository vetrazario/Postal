<div class="space-y-10">
  <div>
    <h1 class="text-3xl font-bold text-gray-900">Edit Webhook</h1>
  </div>
  <div class="mx-auto max-w-2xl">
    <%= form_with model: @webhook, url: dashboard_webhook_path(@webhook), method: :patch, class: "space-y-6" do |form| %>
      <div class="rounded-md bg-white shadow-sm ring-1 ring-gray-900/5 px-4 py-6 sm:p-8">
        <div class="space-y-6">
          <div>
            <%= form.label :url, "Webhook URL", class: "block text-sm font-medium text-gray-900" %>
            <%= form.url_field :url, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm" %>
          </div>
          <div class="flex items-center">
            <%= form.check_box :active, class: "h-4 w-4 rounded border-gray-300 text-indigo-600" %>
            <%= form.label :active, "Active", class: "ml-3 text-sm font-medium text-gray-900" %>
          </div>
        </div>
      </div>
      <div class="flex items-center justify-end gap-x-6">
        <%= link_to "Cancel", dashboard_webhooks_path, class: "text-sm font-semibold text-gray-900" %>
        <%= form.submit "Update", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>
