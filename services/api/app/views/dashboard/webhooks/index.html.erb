<div class="space-y-6">
  <div class="sm:flex sm:items-center sm:justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Webhooks</h1>
      <p class="mt-2 text-sm text-gray-700">Configure webhook endpoints for event notifications</p>
    </div>
    <div class="mt-4 sm:mt-0">
      <%= link_to new_dashboard_webhook_path, class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" do %>
        Add Webhook
      <% end %>
    </div>
  </div>

  <div class="overflow-hidden bg-white shadow sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-300">
      <thead class="bg-gray-50">
        <tr>
          <th class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900">URL</th>
          <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Events</th>
          <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Success Rate</th>
          <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Status</th>
          <th class="relative py-3.5 pl-3 pr-4"><span class="sr-only">Actions</span></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% if @webhooks.empty? %>
          <tr>
            <td colspan="5" class="px-6 py-10 text-center text-sm text-gray-500">No webhooks configured</td>
          </tr>
        <% else %>
          <% @webhooks.each do |webhook| %>
            <tr>
              <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900"><%= truncate(webhook.url, length: 50) %></td>
              <td class="px-3 py-4 text-sm text-gray-500"><%= webhook.events.join(', ') %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                <% total = webhook.successful_deliveries + webhook.failed_deliveries %>
                <% rate = total > 0 ? (webhook.successful_deliveries.to_f / total * 100).round(1) : 0 %>
                <%= rate %>%
              </td>
              <td class="whitespace-nowrap px-3 py-4 text-sm">
                <% if webhook.active? %>
                  <span class="inline-flex rounded-full bg-green-100 px-2 text-xs font-semibold text-green-800">Active</span>
                <% else %>
                  <span class="inline-flex rounded-full bg-gray-100 px-2 text-xs font-semibold text-gray-800">Inactive</span>
                <% end %>
              </td>
              <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium">
                <%= link_to "View", dashboard_webhook_path(webhook), class: "text-indigo-600 hover:text-indigo-900 mr-2" %>
                <%= link_to "Edit", edit_dashboard_webhook_path(webhook), class: "text-indigo-600 hover:text-indigo-900 mr-2" %>
                <%= button_to "Delete", dashboard_webhook_path(webhook), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "text-red-600 hover:text-red-900" %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
