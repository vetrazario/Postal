<div class="space-y-6">
  <div class="sm:flex sm:items-center sm:justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Webhook Details</h1>
      <p class="mt-2 text-sm text-gray-700"><%= @webhook.url %></p>
    </div>
    <div class="mt-4 sm:mt-0 flex gap-2">
      <%= button_to "Test", test_dashboard_webhook_path(@webhook), method: :post, class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" %>
      <%= link_to "Edit", edit_dashboard_webhook_path(@webhook), class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    </div>
  </div>

  <div class="overflow-hidden bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-base font-semibold text-gray-900">Recent Delivery Logs</h3>
      <div class="mt-4 divide-y divide-gray-200">
        <% @recent_logs.each do |log| %>
          <div class="py-3 flex items-center justify-between">
            <div>
              <div class="text-sm font-medium text-gray-900"><%= log.event_type.capitalize %></div>
              <div class="text-sm text-gray-500"><%= log.created_at.strftime('%Y-%m-%d %H:%M:%S') %></div>
            </div>
            <div>
              <% if log.success? %>
                <span class="inline-flex rounded-full bg-green-100 px-2 text-xs font-semibold text-green-800">Success</span>
              <% else %>
                <span class="inline-flex rounded-full bg-red-100 px-2 text-xs font-semibold text-red-800">Failed</span>
              <% end %>
              <span class="ml-2 text-sm text-gray-500"><%= log.response_code %></span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <%= link_to "â† Back to Webhooks", dashboard_webhooks_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
</div>
