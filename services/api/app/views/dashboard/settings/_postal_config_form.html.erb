<div class="mx-auto max-w-2xl" x-data="{
  testing: false,
  testResult: null,
  testPostalConnection() {
    this.testing = true;
    this.testResult = null;

    fetch('/dashboard/settings/test_postal_connection', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('[name=csrf-token]').content
      },
      credentials: 'include'
    })
    .then(r => r.json())
    .then(data => {
      this.testResult = data;
      this.testing = false;
    })
    .catch(err => {
      this.testResult = { success: false, error: err.message };
      this.testing = false;
    });
  }
}">
  <%= form_with model: @system_config,
                url: update_system_config_dashboard_settings_path,
                method: :patch,
                class: "space-y-6" do |form| %>

    <div class="rounded-md bg-white shadow-sm ring-1 ring-gray-900/5">
      <div class="px-4 py-6 sm:p-8">
        <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8">

          <!-- Postal API URL -->
          <div>
            <%= form.label :postal_api_url, "Postal API URL", class: "block text-sm font-medium text-gray-900" %>
            <div class="mt-2 flex gap-2">
              <%= form.text_field :postal_api_url,
                  placeholder: "http://postal:5000",
                  required: true,
                  id: "postal_api_url",
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm" %>

              <button type="button"
                      @click="testPostalConnection()"
                      :disabled="testing"
                      class="whitespace-nowrap rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 disabled:opacity-50">
                <span x-show="!testing">üîå Test</span>
                <span x-show="testing" x-cloak>‚è≥ Testing...</span>
              </button>
            </div>

            <!-- Test Result -->
            <div x-show="testResult" x-cloak class="mt-2">
              <div :class="testResult && testResult.success ? 'bg-green-50 text-green-800' : 'bg-red-50 text-red-800'"
                   class="rounded-md p-3 text-sm">
                <span x-text="testResult && testResult.success ? '‚úÖ Connection successful: ' + testResult.message : '‚ùå Connection failed: ' + testResult.error"></span>
              </div>
            </div>

            <p class="mt-2 text-sm text-gray-500">
              Postal API server URL (usually http://postal:5000 inside Docker)
            </p>
            <div class="mt-2 text-xs bg-blue-50 text-blue-800 p-2 rounded">
              <strong>Affects:</strong> API, Sidekiq
            </div>
          </div>

          <!-- Postal API Key -->
          <div>
            <%= form.label :postal_api_key, "Postal API Key", class: "block text-sm font-medium text-gray-900" %>
            <div class="mt-2">
              <%= form.text_field :postal_api_key,
                  value: @system_config.postal_api_key,
                  placeholder: "Enter Postal API Key",
                  required: true,
                  autocomplete: "off",
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm font-mono" %>
            </div>
            <p class="mt-2 text-sm text-gray-500">
              API key for Postal authentication (X-Server-API-Key)
            </p>
            <div class="mt-2 text-xs bg-gray-50 text-gray-600 p-2 rounded font-mono text-xs">
              Get: postal list-servers ‚Üí use API Key
            </div>
          </div>

          <!-- Postal Signing Key -->
          <div>
            <%= form.label :postal_signing_key, "Postal Signing Key", class: "block text-sm font-medium text-gray-900" %>
            <div class="mt-2">
              <%= form.text_field :postal_signing_key,
                  value: @system_config.postal_signing_key,
                  placeholder: "Enter Postal Signing Key",
                  autocomplete: "off",
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm font-mono" %>
            </div>
            <p class="mt-2 text-sm text-gray-500">
              Signing key for creating server in Postal
            </p>
          </div>

          <!-- Postal Webhook Public Key -->
          <div>
            <%= form.label :postal_webhook_public_key, "Postal Webhook Public Key", class: "block text-sm font-medium text-gray-900" %>
            <div class="mt-2">
              <%= form.text_area :postal_webhook_public_key,
                  value: @system_config.postal_webhook_public_key,
                  placeholder: "-----BEGIN PUBLIC KEY-----\nMIIBIjANBgkqhkiG9w0BAQEFAAOCAQ8A...\n-----END PUBLIC KEY-----",
                  rows: 6,
                  autocomplete: "off",
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm font-mono" %>
            </div>
            <p class="mt-2 text-sm text-gray-500">
              Public key from Postal for verifying incoming webhook signatures (PEM format)
            </p>
            <div class="mt-2 text-xs bg-yellow-50 text-yellow-800 p-2 rounded">
              <strong>Important:</strong> Get this key from Postal admin panel. Include the BEGIN/END lines.
            </div>
          </div>

        </div>
      </div>
    </div>

    <!-- Info Box -->
    <div class="rounded-md bg-blue-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800">Postal Configuration</h3>
          <div class="mt-2 text-sm text-blue-700">
            <p>Postal is a mail server for sending email via SMTP.</p>
            <p class="mt-1">Changing Postal settings requires API and Sidekiq container restart.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex items-center justify-end gap-x-6">
      <%= form.submit "Save Configuration", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    </div>
  <% end %>
</div>
