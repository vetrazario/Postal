<div class="mx-auto max-w-2xl">
  <%= form_with model: @system_config,
                url: update_system_config_dashboard_settings_path,
                method: :patch,
                class: "space-y-6" do |form| %>

    <div class="rounded-md bg-white shadow-sm ring-1 ring-gray-900/5">
      <div class="px-4 py-6 sm:p-8">
        <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8">

          <!-- Daily Limit -->
          <div>
            <%= form.label :daily_limit, "Daily Email Limit", class: "block text-sm font-medium text-gray-900" %>
            <div class="mt-2">
              <%= form.number_field :daily_limit,
                  min: 0,
                  step: 1000,
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm" %>
            </div>
            <p class="mt-2 text-sm text-gray-500">
              Maximum number of emails per day (0 = unlimited)
            </p>
            <div class="mt-2 text-xs bg-blue-50 text-blue-800 p-2 rounded">
              <strong>Affects:</strong> API
            </div>
          </div>

          <!-- Sidekiq Concurrency -->
          <div>
            <%= form.label :sidekiq_concurrency, "Sidekiq Concurrency", class: "block text-sm font-medium text-gray-900" %>
            <div class="mt-2">
              <%= form.number_field :sidekiq_concurrency,
                  min: 1,
                  max: 50,
                  step: 1,
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm" %>
            </div>
            <p class="mt-2 text-sm text-gray-500">
              Number of parallel Sidekiq threads (recommended 5-10)
            </p>
            <div class="mt-2 text-xs bg-yellow-50 text-yellow-800 p-2 rounded">
              <strong>Warning:</strong> High values require more memory
            </div>
          </div>

          <!-- Webhook Secret -->
          <div>
            <%= form.label :webhook_secret, "Webhook Secret", class: "block text-sm font-medium text-gray-900" %>
            <div class="mt-2">
              <%= form.text_field :webhook_secret,
                  value: @system_config.webhook_secret,
                  placeholder: "Enter webhook secret",
                  autocomplete: "off",
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm font-mono" %>
            </div>
            <p class="mt-2 text-sm text-gray-500">
              Secret key for signing outgoing webhooks (HMAC-SHA256)
            </p>
            <div class="mt-2 text-xs bg-gray-50 text-gray-600 p-2 rounded font-mono">
              Generate: openssl rand -hex 32
            </div>
          </div>

          <!-- SMTP Relay Secret -->
          <div>
            <%= form.label :smtp_relay_secret, "SMTP Relay Secret", class: "block text-sm font-medium text-gray-900" %>
            <div class="mt-2">
              <%= form.text_field :smtp_relay_secret,
                  value: @system_config.smtp_relay_secret,
                  placeholder: "Enter SMTP relay secret",
                  autocomplete: "off",
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm font-mono" %>
            </div>
            <p class="mt-2 text-sm text-gray-500">
              Secret key for HMAC signing between SMTP Relay and API (internal security)
            </p>
            <div class="mt-2 text-xs bg-blue-50 text-blue-800 p-2 rounded">
              <strong>Affects:</strong> SMTP Relay, API
            </div>
            <div class="mt-2 text-xs bg-gray-50 text-gray-600 p-2 rounded font-mono">
              Generate: openssl rand -hex 32
            </div>
          </div>

          <!-- SMTP Relay Port -->
          <div>
            <%= form.label :smtp_relay_port, "SMTP Relay Port", class: "block text-sm font-medium text-gray-900" %>
            <div class="mt-2">
              <%= form.number_field :smtp_relay_port,
                  min: 1,
                  max: 65535,
                  step: 1,
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm" %>
            </div>
            <p class="mt-2 text-sm text-gray-500">
              Port for SMTP Relay server (default: 2587)
            </p>
            <div class="mt-2 text-xs bg-blue-50 text-blue-800 p-2 rounded">
              <strong>Affects:</strong> SMTP Relay
            </div>
          </div>

          <!-- SMTP Auth Required -->
          <div class="flex items-center justify-between">
            <div class="flex-1">
              <%= form.label :smtp_relay_auth_required, "SMTP Authentication Required", class: "block text-sm font-medium text-gray-900" %>
              <p class="text-sm text-gray-500">Require authentication for SMTP connections</p>
            </div>
            <div class="ml-4">
              <%= form.check_box :smtp_relay_auth_required, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600" %>
            </div>
          </div>

          <!-- SMTP TLS Enabled -->
          <div class="flex items-center justify-between">
            <div class="flex-1">
              <%= form.label :smtp_relay_tls_enabled, "SMTP TLS/STARTTLS", class: "block text-sm font-medium text-gray-900" %>
              <p class="text-sm text-gray-500">Enable STARTTLS encryption for SMTP connections</p>
            </div>
            <div class="ml-4">
              <%= form.check_box :smtp_relay_tls_enabled, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600" %>
            </div>
          </div>

        </div>
      </div>
    </div>

    <!-- Info Box -->
    <div class="rounded-md bg-yellow-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800">Security Note</h3>
          <div class="mt-2 text-sm text-yellow-700">
            <p>All sensitive data (API keys, secrets) are encrypted in the database using Rails encryption.</p>
            <p class="mt-1">Never share secret keys via unsecured channels.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex items-center justify-end gap-x-6">
      <%= form.submit "Save Configuration", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    </div>
  <% end %>
</div>
