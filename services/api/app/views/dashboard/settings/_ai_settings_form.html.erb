<div class="mx-auto max-w-2xl">
  <%= form_with model: @ai_settings, url: dashboard_settings_path, method: :patch, class: "space-y-6" do |form| %>
    <div class="rounded-md bg-white shadow-sm ring-1 ring-gray-900/5">
      <div class="px-4 py-6 sm:p-8">
        <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8">
          <!-- AI Enabled -->
          <div class="flex items-center justify-between">
            <div class="flex-1">
              <label class="block text-sm font-medium text-gray-900">Enable AI Analytics</label>
              <p class="text-sm text-gray-500">Turn on AI-powered email analytics</p>
            </div>
            <div class="ml-4">
              <%= form.check_box :enabled, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600" %>
            </div>
          </div>

          <!-- OpenRouter API Key -->
          <div>
            <%= form.label :openrouter_api_key, "OpenRouter API Key", class: "block text-sm font-medium text-gray-900" %>
            <div class="mt-2">
              <%= form.password_field :openrouter_api_key,
                  placeholder: "sk-or-...",
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm" %>
            </div>
            <p class="mt-2 text-sm text-gray-500">
              Get your API key from <a href="https://openrouter.ai" target="_blank" rel="noopener noreferrer" class="text-indigo-600 hover:text-indigo-500">openrouter.ai</a>
            </p>
          </div>

          <!-- Model Name -->
          <div>
            <%= form.label :ai_model, "AI Model (OpenRouter format)", class: "block text-sm font-medium text-gray-900" %>
            <div class="mt-2">
              <%= form.text_field :ai_model,
                  placeholder: "anthropic/claude-sonnet-4",
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm" %>
            </div>
            <p class="mt-2 text-sm text-gray-500">
              Copy model ID from <a href="https://openrouter.ai/models" target="_blank" rel="noopener noreferrer" class="text-indigo-600 hover:text-indigo-500">openrouter.ai/models</a><br>
              Examples: <code class="text-xs bg-gray-100 px-1 rounded">anthropic/claude-sonnet-4</code>,
              <code class="text-xs bg-gray-100 px-1 rounded">openai/gpt-4o</code>,
              <code class="text-xs bg-gray-100 px-1 rounded">google/gemini-2.0-flash-exp:free</code>
            </p>
          </div>

          <!-- Temperature -->
          <div>
            <%= form.label :temperature, "Temperature (0.0 - 1.0)", class: "block text-sm font-medium text-gray-900" %>
            <div class="mt-2">
              <%= form.number_field :temperature,
                  step: 0.1,
                  min: 0,
                  max: 1,
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm" %>
            </div>
            <p class="mt-2 text-sm text-gray-500">Lower = more focused, Higher = more creative</p>
          </div>

          <!-- Max Tokens -->
          <div>
            <%= form.label :max_tokens, "Max Tokens", class: "block text-sm font-medium text-gray-900" %>
            <div class="mt-2">
              <%= form.number_field :max_tokens,
                  step: 100,
                  min: 100,
                  max: 8000,
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm" %>
            </div>
            <p class="mt-2 text-sm text-gray-500">Maximum response length (higher = more detailed analysis)</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Cost Estimate -->
    <div class="rounded-md bg-blue-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800">Usage Statistics</h3>
          <div class="mt-2 text-sm text-blue-700">
            <p>Total Tokens Used: <%= number_with_delimiter(@ai_settings.total_tokens_used) %></p>
            <p>Estimated Total Cost: $<%= @total_cost %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex items-center justify-end gap-x-6">
      <%= form.submit "Save Settings", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    </div>
  <% end %>
</div>
