<div class="space-y-10">
  <div>
    <h1 class="text-3xl font-bold text-gray-900">Settings</h1>
    <p class="mt-2 text-sm text-gray-700">Configure system settings and integrations</p>
  </div>

  <!-- Infrastructure Summary -->
  <div class="rounded-lg bg-white shadow">
    <div class="px-4 py-5 sm:p-6">
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Infrastructure Summary</h3>
        <span class="inline-flex items-center rounded-md bg-indigo-50 px-2 py-1 text-xs font-medium text-indigo-700 ring-1 ring-inset ring-indigo-600/20">
          Quick Access
        </span>
      </div>

      <div class="mt-6 grid grid-cols-1 gap-5 sm:grid-cols-3">
        <!-- API Keys -->
        <div class="rounded-lg bg-gray-50 p-5 hover:bg-gray-100 transition-colors">
          <div class="flex items-center justify-between">
            <div>
              <dt class="text-sm font-medium text-gray-500">API Keys</dt>
              <dd class="mt-2 text-3xl font-semibold text-gray-900"><%= ApiKey.count %></dd>
            </div>
            <svg class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1121.75 8.25z" />
            </svg>
          </div>
          <%= link_to "Manage API Keys", dashboard_api_keys_path, class: "mt-4 block w-full text-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
        </div>

        <!-- SMTP Credentials -->
        <div class="rounded-lg bg-gray-50 p-5 hover:bg-gray-100 transition-colors">
          <div class="flex items-center justify-between">
            <div>
              <dt class="text-sm font-medium text-gray-500">SMTP Credentials</dt>
              <dd class="mt-2 text-3xl font-semibold text-gray-900"><%= SmtpCredential.count %></dd>
            </div>
            <svg class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
            </svg>
          </div>
          <%= link_to "Manage SMTP Credentials", dashboard_smtp_credentials_path, class: "mt-4 block w-full text-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
        </div>

        <!-- Webhooks -->
        <div class="rounded-lg bg-gray-50 p-5 hover:bg-gray-100 transition-colors">
          <div class="flex items-center justify-between">
            <div>
              <dt class="text-sm font-medium text-gray-500">Webhooks</dt>
              <dd class="mt-2 text-3xl font-semibold text-gray-900"><%= WebhookEndpoint.count %></dd>
            </div>
            <svg class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244" />
            </svg>
          </div>
          <%= link_to "Manage Webhooks", dashboard_webhooks_path, class: "mt-4 block w-full text-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Restart Required Warning -->
  <% if @system_config.restart_required? %>
    <div class="rounded-md bg-yellow-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3 flex-1">
          <h3 class="text-sm font-medium text-yellow-800">Configuration changed</h3>
          <div class="mt-2 text-sm text-yellow-700">
            <p>The following services need to be restarted: <strong><%= @system_config.restart_services.join(', ') %></strong></p>
          </div>
          <div class="mt-4">
            <button type="button"
                    onclick="applyChanges()"
                    class="rounded-md bg-yellow-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-yellow-500">
              Apply Changes & Restart Services
            </button>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Tabs -->
  <div x-data="{ activeTab: '<%= params[:tab] || 'ai' %>' }">
    <!-- Tab Navigation -->
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex space-x-8" aria-label="Tabs">
        <button @click="activeTab = 'ai'"
                :class="activeTab === 'ai' ? 'border-indigo-500 text-indigo-600' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'"
                class="whitespace-nowrap border-b-2 py-4 px-1 text-sm font-medium">
          ü§ñ AI Analytics
        </button>

        <button @click="activeTab = 'server'"
                :class="activeTab === 'server' ? 'border-indigo-500 text-indigo-600' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'"
                class="whitespace-nowrap border-b-2 py-4 px-1 text-sm font-medium">
          üñ•Ô∏è Server
        </button>

        <button @click="activeTab = 'ams'"
                :class="activeTab === 'ams' ? 'border-indigo-500 text-indigo-600' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'"
                class="whitespace-nowrap border-b-2 py-4 px-1 text-sm font-medium">
          üîó AMS Integration
        </button>

        <button @click="activeTab = 'postal'"
                :class="activeTab === 'postal' ? 'border-indigo-500 text-indigo-600' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'"
                class="whitespace-nowrap border-b-2 py-4 px-1 text-sm font-medium">
          üìß Postal
        </button>

        <button @click="activeTab = 'limits'"
                :class="activeTab === 'limits' ? 'border-indigo-500 text-indigo-600' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'"
                class="whitespace-nowrap border-b-2 py-4 px-1 text-sm font-medium">
          üîí Limits & Security
        </button>
      </nav>
    </div>

    <!-- Tab Content -->
    <div class="mt-6">
      <!-- AI Analytics Tab -->
      <div x-show="activeTab === 'ai'" x-cloak>
        <%= render 'ai_settings_form' %>
      </div>

      <!-- Server Configuration Tab -->
      <div x-show="activeTab === 'server'" x-cloak>
        <%= render 'server_config_form' %>
      </div>

      <!-- AMS Integration Tab -->
      <div x-show="activeTab === 'ams'" x-cloak>
        <%= render 'ams_config_form' %>
      </div>

      <!-- Postal Tab -->
      <div x-show="activeTab === 'postal'" x-cloak>
        <%= render 'postal_config_form' %>
      </div>

      <!-- Limits & Security Tab -->
      <div x-show="activeTab === 'limits'" x-cloak>
        <%= render 'limits_config_form' %>
      </div>
    </div>
  </div>
</div>

<script>
function applyChanges() {
  if (!confirm('Restart services? This will cause brief downtime.')) {
    return;
  }

  fetch('/dashboard/settings/apply_changes', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
    }
  })
  .then(r => r.json())
  .then(data => {
    if (data.success) {
      alert('‚úÖ Services restarted successfully!');
      window.location.reload();
    } else {
      alert('‚ùå Error: ' + data.message);
    }
  });
}
</script>
