<div class="mx-auto max-w-2xl" x-data="{
  testing: false,
  testResult: null,
  testAmsConnection() {
    const url = document.getElementById('ams_callback_url').value;

    if (!url) {
      alert('Enter AMS Callback URL');
      return;
    }

    this.testing = true;
    this.testResult = null;

    fetch('/dashboard/settings/test_ams_connection', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('[name=\"csrf-token\"]').content
      },
      body: JSON.stringify({ url: url })
    })
    .then(r => r.json())
    .then(data => {
      this.testResult = data;
      this.testing = false;
    })
    .catch(err => {
      this.testResult = { success: false, error: err.message };
      this.testing = false;
    });
  }
}">
  <%= form_with model: @system_config,
                url: update_system_config_dashboard_settings_path,
                method: :patch,
                class: "space-y-6" do |form| %>

    <div class="rounded-md bg-white shadow-sm ring-1 ring-gray-900/5">
      <div class="px-4 py-6 sm:p-8">
        <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8">

          <!-- AMS Callback URL -->
          <div>
            <%= form.label :ams_callback_url, "AMS Callback URL", class: "block text-sm font-medium text-gray-900" %>
            <div class="mt-2 flex gap-2">
              <%= form.text_field :ams_callback_url,
                  placeholder: "https://ams.example.com/api/webhooks",
                  required: true,
                  id: "ams_callback_url",
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm" %>

              <button type="button"
                      @click="testAmsConnection()"
                      :disabled="testing"
                      class="whitespace-nowrap rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 disabled:opacity-50">
                <span x-show="!testing">üîå Test</span>
                <span x-show="testing" x-cloak>‚è≥ Testing...</span>
              </button>
            </div>

            <!-- Test Result -->
            <div x-show="testResult" x-cloak class="mt-2">
              <div :class="testResult.success ? 'bg-green-50 text-green-800' : 'bg-red-50 text-red-800'"
                   class="rounded-md p-3 text-sm">
                <span x-text="testResult.success ? '‚úÖ Connection successful: ' + testResult.message : '‚ùå Connection failed: ' + testResult.error"></span>
              </div>
            </div>

            <p class="mt-2 text-sm text-gray-500">
              URL to send webhooks to AMS Enterprise on Windows server
            </p>
            <div class="mt-2 text-xs bg-blue-50 text-blue-800 p-2 rounded">
              <strong>Affects:</strong> API, Sidekiq
            </div>
          </div>

          <!-- AMS API URL -->
          <div>
            <%= form.label :ams_api_url, "AMS API URL (optional)", class: "block text-sm font-medium text-gray-900" %>
            <div class="mt-2">
              <%= form.text_field :ams_api_url,
                  placeholder: "https://ams.example.com/api",
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm" %>
            </div>
            <p class="mt-2 text-sm text-gray-500">
              AMS API URL to fetch data (if required)
            </p>
          </div>

          <!-- AMS API Key -->
          <div>
            <%= form.label :ams_api_key, "AMS API Key (optional)", class: "block text-sm font-medium text-gray-900" %>
            <div class="mt-2">
              <%= form.text_field :ams_api_key,
                  value: @system_config.ams_api_key,
                  placeholder: "Enter AMS API Key (optional)",
                  autocomplete: "off",
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm font-mono" %>
            </div>
            <p class="mt-2 text-sm text-gray-500">
              API key for AMS authentication (leave empty if not required)
            </p>
            <div class="mt-2 flex items-center gap-2 text-xs text-yellow-600 bg-yellow-50 p-2 rounded">
              <svg class="h-4 w-4 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
              </svg>
              <span><strong>Important:</strong> Changes require Sidekiq restart</span>
            </div>
          </div>

        </div>
      </div>
    </div>

    <!-- Info Box -->
    <div class="rounded-md bg-blue-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800">AMS Integration Info</h3>
          <div class="mt-2 text-sm text-blue-700">
            <p>AMS Enterprise is a Windows desktop application on a separate server.</p>
            <ul class="list-disc list-inside mt-1 space-y-1">
              <li>AMS connects to Send Server via SMTP (port 2587)</li>
              <li>Send Server sends webhooks to AMS with delivery results</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex items-center justify-end gap-x-6">
      <%= form.submit "Save Configuration", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    </div>
  <% end %>
</div>
