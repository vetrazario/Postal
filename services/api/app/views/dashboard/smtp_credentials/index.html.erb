<div class="space-y-6">
  <!-- Page header -->
  <div class="sm:flex sm:items-center sm:justify-between">
    <div>
      <h1 class="text-3xl font-bold tracking-tight text-gray-900">SMTP Credentials</h1>
      <p class="mt-2 text-sm text-gray-700">Manage SMTP credentials for AMS Enterprise integration</p>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <%= link_to new_dashboard_smtp_credential_path, class: "block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
        Generate New Credential
      <% end %>
    </div>
  </div>

  <!-- Credentials list -->
  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Username</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Description</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Rate Limit</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Last Used</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Status</th>
                <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                  <span class="sr-only">Actions</span>
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <% if @smtp_credentials.empty? %>
                <tr>
                  <td colspan="6" class="px-6 py-10 text-center text-sm text-gray-500">
                    <div class="flex flex-col items-center">
                      <svg class="h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1121.75 8.25z" />
                      </svg>
                      <h3 class="mt-2 text-sm font-semibold text-gray-900">No credentials</h3>
                      <p class="mt-1 text-sm text-gray-500">Get started by generating a new SMTP credential.</p>
                      <div class="mt-6">
                        <%= link_to new_dashboard_smtp_credential_path, class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
                          <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
                          </svg>
                          Generate Credential
                        <% end %>
                      </div>
                    </div>
                  </td>
                </tr>
              <% else %>
                <% @smtp_credentials.each do |credential| %>
                  <tr>
                    <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
                      <code class="rounded bg-gray-100 px-2 py-1 text-xs"><%= credential.username %></code>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                      <%= credential.description || '-' %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                      <%= credential.rate_limit %> emails/min
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                      <%= credential.last_used_at ? time_ago_in_words(credential.last_used_at) + ' ago' : 'Never' %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                      <% if credential.active? %>
                        <span class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">
                          Active
                        </span>
                      <% else %>
                        <span class="inline-flex items-center rounded-md bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10">
                          Inactive
                        </span>
                      <% end %>
                    </td>
                    <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                      <div class="flex items-center justify-end gap-2">
                        <%= button_to credential.active? ? 'Deactivate' : 'Activate', toggle_active_dashboard_smtp_credential_path(credential), method: :patch, class: "text-indigo-600 hover:text-indigo-900" %>
                        <span class="text-gray-300">|</span>
                        <%= button_to 'New Password', regenerate_password_dashboard_smtp_credential_path(credential), method: :post, data: { confirm: 'Generate new password? Old password will stop working immediately.' }, class: "text-orange-600 hover:text-orange-900" %>
                        <span class="text-gray-300">|</span>
                        <%= link_to 'Edit', edit_dashboard_smtp_credential_path(credential), class: "text-indigo-600 hover:text-indigo-900" %>
                        <span class="text-gray-300">|</span>
                        <%= button_to 'Delete', dashboard_smtp_credential_path(credential), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-600 hover:text-red-900" %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Info box -->
  <div class="rounded-md bg-blue-50 p-4 mb-4">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3 flex-1 md:flex md:justify-between">
        <p class="text-sm text-blue-700">
          SMTP credentials are used to authenticate AMS Enterprise when sending emails through SMTP Relay.
          Generate a credential here and configure it in your AMS SMTP settings.
        </p>
      </div>
    </div>
  </div>

  <!-- AMS Configuration Guide -->
  <div class="rounded-md bg-green-50 p-4 border border-green-200">
    <h3 class="text-sm font-semibold text-green-900 mb-2">AMS Enterprise SMTP Configuration</h3>
    <p class="text-sm text-green-800 mb-3">Use these settings in AMS Enterprise:</p>
    <div class="bg-white rounded p-3 text-sm font-mono space-y-1">
      <div><span class="text-gray-500">SMTP Server:</span> <strong><%= SystemConfig.get(:domain) || 'your-domain.com' %></strong></div>
      <div><span class="text-gray-500">SMTP Port:</span> <strong>2587</strong></div>
      <div><span class="text-gray-500">Security:</span> <strong>STARTTLS</strong></div>
      <div><span class="text-gray-500">Username:</span> <strong>[Use username from credential above]</strong></div>
      <div><span class="text-gray-500">Password:</span> <strong>[Use password shown when creating credential]</strong></div>
    </div>
    <p class="text-xs text-green-700 mt-2">
      Note: Password is only shown once when creating the credential. Use "New Password" button to regenerate if lost.
    </p>
  </div>
</div>
