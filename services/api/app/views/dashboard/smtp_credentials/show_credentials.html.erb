<div class="space-y-10">
  <!-- Page header -->
  <div>
    <h1 class="text-3xl font-bold tracking-tight text-gray-900">SMTP Credential Generated Successfully</h1>
    <p class="mt-2 text-sm text-gray-700">Save these credentials now - the password won't be shown again</p>
  </div>

  <!-- Warning banner -->
  <div class="rounded-md bg-red-50 p-4">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-red-800">This is your only chance to copy the password!</h3>
        <div class="mt-2 text-sm text-red-700">
          <p>For security reasons, we cannot show you this password again. Make sure to copy it now and store it securely.</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Credentials display -->
  <div class="mx-auto max-w-4xl">
    <div class="overflow-hidden bg-white shadow sm:rounded-lg">
      <div class="px-4 py-6 sm:px-6">
        <h3 class="text-base font-semibold leading-7 text-gray-900">SMTP Connection Information</h3>
        <p class="mt-1 max-w-2xl text-sm leading-6 text-gray-500">Use these settings to configure AMS Enterprise</p>
      </div>
      <div class="border-t border-gray-100">
        <dl class="divide-y divide-gray-100">
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-900">SMTP Host</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
              <div class="flex items-center gap-2">
                <code class="rounded bg-gray-100 px-3 py-2 font-mono text-sm"><%= ENV['DOMAIN'] || 'linenarrow.com' %></code>
                <button onclick="copyToClipboard('<%= j(ENV['DOMAIN'] || 'linenarrow.com') %>')" class="text-indigo-600 hover:text-indigo-900">
                  <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0013.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 01-.75.75H9a.75.75 0 01-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 01-2.25 2.25H6.75A2.25 2.25 0 014.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 011.927-.184" />
                  </svg>
                </button>
              </div>
            </dd>
          </div>

          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-900">SMTP Port</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
              <code class="rounded bg-gray-100 px-3 py-2 font-mono text-sm">587</code>
            </dd>
          </div>

          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-900">Security</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
              <code class="rounded bg-gray-100 px-3 py-2 font-mono text-sm">TLS/STARTTLS</code>
            </dd>
          </div>

          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6 bg-yellow-50">
            <dt class="text-sm font-medium text-gray-900">Username</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
              <div class="flex items-center gap-2">
                <code class="rounded bg-white px-3 py-2 font-mono text-sm font-bold"><%= @smtp_credential.username %></code>
                <button onclick="copyToClipboard('<%= j(@smtp_credential.username) %>')" class="text-indigo-600 hover:text-indigo-900">
                  <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0013.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 01-.75.75H9a.75.75 0 01-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 01-2.25 2.25H6.75A2.25 2.25 0 014.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 011.927-.184" />
                  </svg>
                </button>
              </div>
            </dd>
          </div>

          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6 bg-red-50">
            <dt class="text-sm font-medium text-gray-900">
              Password
              <span class="ml-2 inline-flex items-center rounded-md bg-red-100 px-2 py-1 text-xs font-medium text-red-700">
                Copy now!
              </span>
            </dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
              <div class="flex items-center gap-2">
                <code class="rounded bg-white px-3 py-2 font-mono text-sm font-bold text-red-600"><%= @generated_password %></code>
                <button onclick="copyToClipboard('<%= j(@generated_password) %>')" class="rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500">
                  <svg class="h-5 w-5 inline mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0013.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 01-.75.75H9a.75.75 0 01-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 01-2.25 2.25H6.75A2.25 2.25 0 014.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 011.927-.184" />
                  </svg>
                  Copy Password
                </button>
              </div>
            </dd>
          </div>

          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-900">Rate Limit</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
              <code class="rounded bg-gray-100 px-3 py-2 font-mono text-sm"><%= @smtp_credential.rate_limit %> emails/minute</code>
            </dd>
          </div>

          <% if @smtp_credential.description.present? %>
            <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-900">Description</dt>
              <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
                <%= @smtp_credential.description %>
              </dd>
            </div>
          <% end %>
        </dl>
      </div>
    </div>
  </div>

  <!-- Configuration instructions -->
  <div class="mx-auto max-w-4xl">
    <div class="rounded-lg bg-blue-50 p-6">
      <h3 class="text-base font-semibold text-blue-900">How to configure AMS Enterprise</h3>
      <ol class="mt-4 list-decimal list-inside space-y-2 text-sm text-blue-800">
        <li>Open AMS Enterprise settings</li>
        <li>Navigate to SMTP configuration section</li>
        <li>Enter the host, port, username, and password shown above</li>
        <li>Select TLS/STARTTLS as the security method</li>
        <li>Save and test the connection</li>
      </ol>
    </div>
  </div>

  <!-- Actions -->
  <div class="flex items-center justify-end gap-x-6">
    <%= link_to "Back to Credentials List", dashboard_smtp_credentials_path, class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  </div>
</div>

<script>
function copyToClipboard(text) {
  navigator.clipboard.writeText(text).then(function() {
    // Show success message (you could enhance this with a toast notification)
    alert('Copied to clipboard!');
  }, function(err) {
    console.error('Could not copy text: ', err);
  });
}
</script>
