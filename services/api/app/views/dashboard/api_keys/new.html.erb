<div class="space-y-10">
  <div>
    <h1 class="text-3xl font-bold tracking-tight text-gray-900">Generate API Key</h1>
    <p class="mt-2 text-sm text-gray-700">Create new API key for HTTP endpoint access</p>
  </div>

  <div class="mx-auto max-w-2xl">
    <%= form_with model: @api_key, url: dashboard_api_keys_path, method: :post, class: "space-y-6" do |form| %>
      <div class="rounded-md bg-white shadow-sm ring-1 ring-gray-900/5">
        <div class="px-4 py-6 sm:p-8">
          <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8">
            <div>
              <%= form.label :name, "Name", class: "block text-sm font-medium text-gray-900" %>
              <%= form.text_field :name, placeholder: "e.g., Production API", class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm" %>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-900">Permissions</label>
              <div class="mt-2 space-y-2">
                <div class="flex items-center">
                  <%= check_box_tag 'api_key[permissions][]', 'send', true, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600" %>
                  <label class="ml-3 text-sm text-gray-700">Send emails</label>
                </div>
                <div class="flex items-center">
                  <%= check_box_tag 'api_key[permissions][]', 'batch', true, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600" %>
                  <label class="ml-3 text-sm text-gray-700">Batch send</label>
                </div>
              </div>
            </div>

            <div>
              <%= form.label :rate_limit, "Rate Limit (requests/minute)", class: "block text-sm font-medium text-gray-900" %>
              <%= form.number_field :rate_limit, value: 100, min: 1, max: 1000, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm" %>
            </div>

            <div>
              <%= form.label :daily_limit, "Daily Limit (0 = unlimited)", class: "block text-sm font-medium text-gray-900" %>
              <%= form.number_field :daily_limit, value: 0, min: 0, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm" %>
            </div>
          </div>
        </div>
      </div>

      <div class="rounded-md bg-yellow-50 p-4">
        <p class="text-sm text-yellow-700">The API key will be shown only once after generation. Make sure to copy and save it securely.</p>
      </div>

      <div class="flex items-center justify-end gap-x-6">
        <%= link_to "Cancel", dashboard_api_keys_path, class: "text-sm font-semibold text-gray-900" %>
        <%= form.submit "Generate API Key", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>
