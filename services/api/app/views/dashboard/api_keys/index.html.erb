<div class="space-y-6">
  <div class="sm:flex sm:items-center sm:justify-between">
    <div>
      <h1 class="text-3xl font-bold tracking-tight text-gray-900">API Keys</h1>
      <p class="mt-2 text-sm text-gray-700">Manage API keys for HTTP endpoint access</p>
    </div>
    <div class="mt-4 sm:mt-0">
      <%= link_to new_dashboard_api_key_path, class: "block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" do %>
        Generate New API Key
      <% end %>
    </div>
  </div>

  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr>
                <th class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Name</th>
                <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Permissions</th>
                <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Rate Limit</th>
                <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Last Used</th>
                <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Status</th>
                <th class="relative py-3.5 pl-3 pr-4 sm:pr-6"><span class="sr-only">Actions</span></th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <% if @api_keys.empty? %>
                <tr>
                  <td colspan="6" class="px-6 py-10 text-center text-sm text-gray-500">No API keys yet. Generate one to get started.</td>
                </tr>
              <% else %>
                <% @api_keys.each do |key| %>
                  <tr>
                    <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6"><%= key.name %></td>
                    <td class="px-3 py-4 text-sm text-gray-500">
                      <% if key.permissions['send'] %><span class="inline-flex items-center rounded-md bg-blue-50 px-2 py-1 text-xs font-medium text-blue-700 ring-1 ring-inset ring-blue-700/10 mr-1">Send</span><% end %>
                      <% if key.permissions['batch'] %><span class="inline-flex items-center rounded-md bg-purple-50 px-2 py-1 text-xs font-medium text-purple-700 ring-1 ring-inset ring-purple-700/10">Batch</span><% end %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= key.rate_limit %>/min</td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= key.last_used_at ? time_ago_in_words(key.last_used_at) + ' ago' : 'Never' %></td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm">
                      <% if key.active? %>
                        <span class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">Active</span>
                      <% else %>
                        <span class="inline-flex items-center rounded-md bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10">Inactive</span>
                      <% end %>
                    </td>
                    <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                      <%= button_to toggle_active_dashboard_api_key_path(key), method: :patch, class: "text-indigo-600 hover:text-indigo-900 mr-2" do %><%= key.active? ? 'Deactivate' : 'Activate' %><% end %>
                      <%= link_to 'Edit', edit_dashboard_api_key_path(key), class: "text-indigo-600 hover:text-indigo-900 mr-2" %>
                      <%= button_to 'Delete', dashboard_api_key_path(key), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "text-red-600 hover:text-red-900" %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
