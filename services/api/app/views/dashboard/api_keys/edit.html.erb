<div class="space-y-10">
  <div>
    <h1 class="text-3xl font-bold text-gray-900">Edit API Key</h1>
    <p class="mt-2 text-sm text-gray-700">Update API key settings</p>
  </div>

  <div class="mx-auto max-w-2xl">
    <%= form_with model: @api_key, url: dashboard_api_key_path(@api_key), method: :patch, class: "space-y-6" do |form| %>
      <div class="rounded-md bg-white shadow-sm ring-1 ring-gray-900/5 px-4 py-6 sm:p-8">
        <div class="space-y-6">
          <div>
            <%= form.label :name, "Name", class: "block text-sm font-medium text-gray-900" %>
            <%= form.text_field :name, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm" %>
          </div>
          <div>
            <%= form.label :rate_limit, "Rate Limit", class: "block text-sm font-medium text-gray-900" %>
            <%= form.number_field :rate_limit, min: 1, max: 1000, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm" %>
          </div>
          <div>
            <%= form.label :daily_limit, "Daily Limit", class: "block text-sm font-medium text-gray-900" %>
            <%= form.number_field :daily_limit, min: 0, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm" %>
          </div>
        </div>
      </div>
      <div class="flex items-center justify-end gap-x-6">
        <%= link_to "Cancel", dashboard_api_keys_path, class: "text-sm font-semibold text-gray-900" %>
        <%= form.submit "Update", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>
