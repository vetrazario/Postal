      <!-- Overview -->
      <li>
        <%= link_to dashboard_root_path, class: "group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold #{current_page?(dashboard_root_path) ? 'bg-gray-50 text-indigo-600' : 'text-gray-700 hover:text-indigo-600 hover:bg-gray-50'}" do %>
